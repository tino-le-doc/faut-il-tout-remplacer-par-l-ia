{
  "rules": {
    // ==================== UTILISATEURS ====================
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        ".validate": "newData.hasChildren(['email', 'pseudo', 'createdAt'])"
      }
    },
    
    // ==================== PSEUDOS (unicité) ====================
    "pseudos": {
      "$pseudo": {
        ".read": true,
        ".write": "auth != null && (!data.exists() || data.val() == auth.uid)",
        ".validate": "newData.val() == auth.uid"
      }
    },
    
    // ==================== COMPTEURS ====================
    "counters": {
      "visits": {
        ".read": true,
        ".write": true
      },
      "subscribers": {
        ".read": true,
        ".write": true
      }
    },
    
    // ==================== TCHAT PUBLIC ====================
    "chatMessages": {
      ".read": true,
      ".write": true,
      ".indexOn": ["timestamp"]
    },
    
    "chatUsers": {
      ".read": true,
      "$oderId": {
        ".write": true
      }
    },
    
    "chatTyping": {
      ".read": true,
      "$oderId": {
        ".write": true
      }
    },
    
    // ==================== AVIS ====================
    "reviews": {
      ".read": true,
      ".write": true,
      ".indexOn": ["timestamp"]
    },
    
    // ==================== CONTACTS & AMIS ====================
    "contacts": {
      "$oderId": {
        ".read": "auth != null && auth.uid == $oderId",
        ".write": "auth != null && auth.uid == $oderId"
      }
    },
    
    "friendRequests": {
      "$oderId": {
        ".read": "auth != null && auth.uid == $oderId",
        ".write": "auth != null"
      }
    },
    
    // ==================== MESSAGERIE ====================
    "userConversations": {
      "$oderId": {
        ".read": "auth != null && auth.uid == $oderId",
        ".write": "auth != null"
      }
    },
    
    "dmMessages": {
      "$convId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".indexOn": ["timestamp"]
      }
    },
    
    "groups": {
      "$groupId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    
    "groupMessages": {
      "$groupId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".indexOn": ["timestamp"]
      }
    },
    
    // ==================== QUIZ ====================
    "quizScores": {
      ".read": true,
      ".write": true,
      ".indexOn": ["accuracy", "timestamp"]
    },
    
    // ==================== SONDAGES ====================
    "polls": {
      ".read": true,
      "$pollId": {
        ".write": true,
        "votes": {
          "$optionId": {
            ".write": true
          }
        },
        "totalVotes": {
          ".write": true
        }
      }
    },
    
    "dailyVotes": {
      ".read": true,
      "$date": {
        ".write": true
      }
    },
    
    // ==================== DÉBATS ====================
    "debates": {
      ".read": true,
      "$date": {
        ".write": true,
        "pour": {
          ".write": true
        },
        "contre": {
          ".write": true
        }
      }
    },
    
    "debateArguments": {
      ".read": true,
      "$date": {
        ".write": true,
        ".indexOn": ["likes", "timestamp"],
        "$argId": {
          ".write": true,
          "likes": {
            ".write": true
          }
        }
      }
    }
  }
}
